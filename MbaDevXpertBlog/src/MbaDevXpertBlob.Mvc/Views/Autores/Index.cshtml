@model IEnumerable<MbaDevXpertBlog.Mvc.ViewModels.AutorViewModel>

@{
    ViewData["Title"] = "Autores";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Meu Autor</h1>

<partial name="_ReturnMessages" />

<p>
    <a asp-action="Create" class="btn btn-success">Novo Autor</a>
</p>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th
                        <td>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a href="@Url.Action("Create", "posts")" class="btn btn-success btn-sm">Novo Post</a>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Editar</a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-sm">Detalhes</a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Excluir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
