@model IEnumerable<MbaDevXpertBlog.Mvc.ViewModels.PostViewModel>

@{
    ViewData["Title"] = "Posts";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Meus Posts</h1>
<partial name="_ReturnMessages" />
<p>
    <a asp-action="Create" class="btn btn-success">Novo Post</a>
</p>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th class="col-4">
                            @Html.DisplayNameFor(model => model.Conteudo)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td class="col-4">
                                @Html.DisplayFor(modelItem => item.Conteudo)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary btn-sm">Details</a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
